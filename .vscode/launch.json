  "version": "0.2.0",
  "configurations": [

    {
      "name": "user service",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/cmd/user/user.go",
      "args": ["-c", "${workspaceFolder}/configs/user/srv.yaml"],
    },
    {
      "name": "admin server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/cmd/admin/admin.go",
      "args": ["-c", "${workspaceFolder}/configs/admin/admin.yaml"],
    },
    {
      "name": "api server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/cmd/api/api.go",
      "args": ["-c", "${workspaceFolder}/configs/api/api.yaml"],
    },
    {
      "name": "user client",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/app/user/client/client.go",
    }
  ]
}